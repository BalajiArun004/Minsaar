<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="100px" />
            <stroke android:width="1dip" android:color="#D52404" />
            <gradient android:angle="-90" android:startColor="#A81501" android:endColor="#C92801"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="100px" />
            <stroke android:width="1dip" android:color="#DF3702" />
            <solid android:color="#D52F04"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="100px" />
            <stroke android:width="1dip" android:color="#DF0202" />
            <gradient android:angle="-90" android:startColor="#C92306" android:endColor="#D10505" />
        </shape>
    </item>
</selector>